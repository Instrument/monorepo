{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "outDir": ".",
        "rootDir": "src",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": false,
        "declaration": true
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules"
    ]
}